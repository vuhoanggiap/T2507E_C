#include <stdio.h>
#include <math.h>
int main(){
	float a , b , c;
	printf("cho phuong trinh axÂ² + bx + c = 0\n");
	printf("hay nhap a,b,c de tim gia tri cua x\n");
	printf("Nhap a = ");
	scanf("%f",&a);
	printf("Nhap b = ");
	scanf("%f",&b);
	printf("Nhap c = ");
	scanf("%f",&c);
	
	float bbp = b*b;
	float bac = a*c;
	float delta = bbp - 4*bac;
	float b2 = b - 2*b;
	float cdelta = sqrt(delta);

	
	float tu1 = b2 + cdelta;
	float tu2 = b2 - cdelta;
	float mau = 2*a;
	
	float pt1 = tu1 / mau;
	float pt2 = tu2 / mau;
	float pt3 = b2 / mau;
	
	if(a==0){
		printf("day khong phai phuong trinh bac 2");
	}else if(delta > 0){
		printf("phuong trinh co 2 nghiem phan biet:\n");
		printf("nghiem thu nhat:%.0f\n",pt1);
		printf("nghiem thu hai:%.0f\n",pt2);
	}else if(delta == 0){
		printf("phuong trinh co nghiem kep:%f.0\n",pt3);
	}else{
		printf("phuong trinh vo nghiem");
	};
	return 0;
}
